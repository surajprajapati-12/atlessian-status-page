{
  "name": "npm-api-status-monitor",
  "version": "1.0.0",
  "description": "NPM API Status Monitor with SSR",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx server-dev.ts",
    "dev:ssr": "tsx server.ts",
    "build": "tsc && vite build",
    "start": "node dist/server.js",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "build:prod": "npm run clean && npm run build",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "@types/react-router-dom": "^5.3.3",
    "express": "^4.18.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3",
    "uuid": "^11.1.0",
    "vite": "^5.4.19",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "html-webpack-plugin": "^5.6.3",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
